server:
  port: 9000
spring:
    application:
        name: fountation-authorization-service
    security:
      user:
        name: user
        password: password
      oauth2:
        authorizationserver:
          client:
            user-accounts-app:
              registration:
                client-id: "user-accounts-app"
                client-secret: "{noop}secret"
                client-authentication-methods:
                  - "client_secret_basic"
                authorization-grant-types:
                  - "authorization_code"
                  - "refresh_token"
                  - "client_credentials"
                redirect-uris:
                  - "http://127.0.0.1:8080/login/oauth2/code/user-accounts-app-oidc"
                  - "http://127.0.0.1:8080/authorized"
                post-logout-redirect-uris:
                  - "http://127.0.0.1:8080/logged-out"
                scopes:
                  - "openid"
                  - "profile"
                  - "accounts.read"
                  - "accounts.write"
              require-authorization-consent: true